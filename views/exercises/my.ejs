<%- include('../partials/header') %>

<!-- My exercises specific code -->
<h1><%= title %></h1>

<h3 class="hi-user">Hi <%= user.name %>!</h3>

<p>Add a new exercise or access all exercises below:</p>

<a href="/exercises/new" class="new-exercise-btn">New Exercise</a>

<a href="/exercises" class="all-exercises-btn m-top">All Exercises</a>
    
<p>Here are all your created exercises:</p>

<ul> 
    <% exercises.forEach(function(exercise){ %>
        <li>
            <a href="/exercises/<%= exercise._id %>" class="exercise-names"><%= exercise.name %></a>&nbsp;
            <div class="exercise-created-dates">Created: <%= exercise.createdAt.toDateString() %></div>
            <form 
                action="/exercises/<%= exercise._id %>?_method=DELETE"
                method="POST"
                class="delete-exercise-form"
                >
                <button type="submit">X</button>
            </form>
        </li>
    <% }) %> 
</ul>


<!-- End of my exercises specific code -->

<%- include('../partials/footer') %>