<%- include('../partials/header') %>

<!-- All exercises specific code -->
<h1><%= title %></h1>

<p>Please find all exercises below:</p>

<ul> 
    <% exercises.forEach(function(exercise){ %>
        <li>
            <a href="/exercises/<%=exercise._id %>" class="exercise-names"><%= exercise.name %></a>
            <form 
            action="/exercises/<%= exercise._id %>?_method=DELETE"
            method="POST"
            class="delete-exercise-form"
            >
            <button type="submit">X</button>
        </form>
        </li>
    <% }) %> 
</ul>

<!-- End of all exercises specific code -->

